<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="Page1"
  InnerContent="{Binding RootPage.Value}">
  <Grid x:Name="_root" Padding="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="24" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="3*" />
      <RowDefinition Height="48" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="64" />
      </Grid.ColumnDefinitions>

      <Button Grid.Column="0" Text="Refresh" Command="{Binding CompileCommand}" />
    </Grid>
    
    <Editor Grid.Row="1" FontSize="20" Text="{Binding XamlSource.Value, Mode=TwoWay}" />
    <Editor Grid.Row="3" Text="{Binding CompileResult.Value, Mode=TwoWay}" />

  </Grid>
</ContentPage>